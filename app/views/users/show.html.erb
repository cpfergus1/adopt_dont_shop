<head>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
<h2 align="center"><%= @user.name %></h2>
<p style="padding: 0px" align="center">User ID:  <%= @user.id%><br>
<table class ='Show'>
  <tr>
    <td>Address:</td>
    <td><%= @user.address %></td>
  </tr>
  <tr>
    <td>City:</td>
    <td><%= @user.city %></td>
  </tr>
  <tr>
    <td>State:</td>
    <td><%= @user.state %></td>
  </tr>
  <tr>
    <td>Zip:</td>
    <td><%= @user.zip %></td>
  </tr>
</table>
<br>
</body>
<br>
<br>
<table class="Show">
  <% @reviews.each do |review| %>
  <tr>
      <td class="TableContent"><img src=<%=review.pic %> alt=<%= "#{review.user.name}" %> height=75 width=75><br>
          <%= review.user.name %></td>
      <td> <p><%= review.title %> : <%=review.rating %>-stars</p>
           <p><%= review.content %></p>
      </td>
  </tr>
  <% end %>
  </table>
