<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/", class ="navbar">Home</a></li>
          <li><a href="/pets", class ="navbar">All Pets</a></li>
          <li><a href="/shelters", class ="navbar">Shelters</a></li>
          <li><a href= <%=request.referer%>, class ="navbar">Back</a></li></ul>
        </nav>
    </header>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
