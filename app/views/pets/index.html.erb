<head>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
<a href="/apps/new" id = "new_app">Start an Application</a>
<h2 align="center">Pets</h2>

<table class= "Results" align="center" border ="0">
  <tr align="center">
    <td class = "TableTitle">Picture</td>
    <td class = "TableTitle">Name</td>
    <td class = "TableTitle">Age</td>
    <td class = "TableTitle">Gender</td>
    <td class = "TableTitle">Shelter</td>
    <td class = "TableTitle">Description</td>
    <td class = "TableTitle">Options</td>
  </tr>
<% @pets.each do |pet| %>
  <tr align="center">
    <td class="TableContent"><img src=<%="#{pet.image}"%> alt=<%= "#{pet.name}" %> height=200 width=200></td>
    <td class="TableContent"><a href="/pets/<%= pet.id %>"><%= pet.name %></a></td>
    <td class="TableContent"><%= "#{pet.age}" %></td>
    <td class="TableContent"><%= "#{pet.sex}" %></td>
    <td class="TableContent"><a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a></td>
    <td class="TableContent"><%= "#{pet.description}" %></td>
    <td class="TableContent"><a href="/pets/<%= pet.id %>/edit" id="<%= pet.id %>_edit">Edit Info</a><br>
      <a href="/pets/<%=pet.id%>" data-method="delete">Delete Pet</a></td>
  </tr>
    <% end %>
</table>
</body>
