<head>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
<h2 align="center">Application ID: <%= @application.id %></h2>
<table class= "Show">
  <tr>
    <td>Adopter Name:</td>
    <td><%= @user.name %></td>
  </tr>
  <% @pets.each do |pet| %>
    <tr id ="<%=pet.name%>">
      <td> <%= pet.name %></td>
      <td> <%= link_to 'Approve', {:action => "update",:pet_id => pet.id, :id=> @application.id}, method: "patch", class:"button"%></td>
    </tr>
  <% end %>
  <tr>
    <td> Pets to be adopted:</td>
    <td> <% @pets.each do |pet| %>
        <a href="/pets/<%=pet.id %>" id = "<%= pet.name%>"> <%= pet.name %> </a>
        <% end %>
    </td>
  </tr>

  <tr>
    <td>Description: </td>
    <td><%= @application.description %></td>
  </tr>
  <tr id="status">
    <td>Application Status:</td>
    <td><%= @application.status %></td>
  </tr>
</table>
